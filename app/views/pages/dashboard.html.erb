<div class="container">
  <h2>Hello <%= current_user.first_name.capitalize %>,<br>welcome to your dashboard</h2>
</div>

<hr>

<div class="container">
  <h2>My +1 Events</h2>

  <div class="row">
    <div class="col">
      <h4>Waiting For Attendance Approval</h4>
      <div class="event-cards">
        <% @events.each do |event| %>
            <%= render "shared/event_card", event: event %>
        <% end %>
      </div>
    </div>

    <div class="col">
      <h4>Events Attending</h4>
      <div class="event-cards">
        <% @events.each do |event| %>
            <%= render "shared/event_card", event: event %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="container">

  <h2>My Hosted Events</h2>

  <div class="row">
    <div class="col">
      <h4>Waiting For Approval</h4>
      <div class="event-cards">
        <% @events.each do |event| %>
            <%= render "shared/event_card", event: event %>
        <% end %>
      </div>
    </div>

    <div class="col">
      <h4>Confirmed +1</h4>
      <div class="event-cards">
        <% @events.each do |event| %>
            <%= render "shared/event_card", event: event %>
        <% end %>
      </div>
    </div>
  </div>
</div>
