<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">

    <div class ="left-side">
    <%= link_to root_path do %>
    <div class="navbar-brand d-flex gap-2 align-items-center">
        <h3 class="m-0">Find a </h3>
          <%= image_tag "plus-one-icon.png", alt: "PlusOne", width: 200 %>
    </div>
    <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse d-flex gap-2" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: "delete" }, class: "btn btn-warning" %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-warning" %>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-warning" %>
      <% end %>

      <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">

            <% if user_signed_in? %>
              <% if current_user.photo.attached? %>
                <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
                <% end %>
            <% end %>

            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Create Event</a>
              <a class="dropdown-item" href="#">Messages</a>
              <a class="dropdown-item" data-turbo-method="delete" href="#">Log out</a>
            </div>
          </li>
          <!--li class="nav-item"-->
          <!--/li-->
      </ul>
    </div>
  </div>
</div>
