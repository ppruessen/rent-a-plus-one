<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="container-fluid">

    <div class ="left-side">
      <% if user_signed_in? %>
        <%= link_to events_path do %>
          <div class="navbar-brand d-flex gap-2 align-items-center">
              <h3 class="m-0">Find a </h3>
                <%= image_tag "plus-one-icon.png", alt: "PlusOne", width: 200 %>
          </div>
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          <div class="navbar-brand d-flex gap-2 align-items-center">
            <h3 class="m-0">Find a </h3>
              <%= image_tag "plus-one-icon.png", alt: "PlusOne", width: 200 %>
          </div>
        <% end %>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse d-flex gap-2" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <%= link_to "Create your event", new_event_path, class: "btn btn-warning" %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-warning" %>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-warning" %>
      <% end %>

      <ul class="navbar-nav me-auto">

          <li class="nav-item dropdown">
            <% if user_signed_in? %>
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, width: 40, height: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, crop: :thumb, gravity: :face %>
              <% else %>
                <%= image_tag "placeholder.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% end %>
            <% end %>

            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "View Events", events_path, class: "dropdown-item" %>
              <%= link_to "Create Event", new_event_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: "delete" }, class: "dropdown-item" %>
            </div>
          </li>
      </ul>
    </div>
  </div>
</div>
